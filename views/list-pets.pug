doctype html
html 
    head 
        title= `${title}`
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href="/css/style.css")
    body
        h1 Pets List
        table
            thead
                tr
                    th Pet Name
                    th Animal Age
            tbody
            each pet in pets
                tr
                    td= pet.properties.pet_name
                    td= pet.properties.age
        a(href="/create-pets" class="add-update-link") Add a New Pet 